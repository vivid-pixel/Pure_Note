Procedure Window_Main_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
        Case #MenuBtn_New
        Case #MenuBtn_Open
          LoadFile(EventMenu())
        Case #MenuBtn_Save
          SaveFile(EventMenu())
        Case #MenuBtn_SaveAs
          SaveFileAs(EventMenu())
        Case #MenuBtn_Print
        Case #MenuBtn_Quit
        Case #MenuBtn_Undo
        Case #MenuBtn_Cut
        Case #MenuBtn_Copy
        Case #MenuBtn_Paste
        Case #MenuBtn_Delete
        Case #MenuBtn_Find
        Case #MenuBtn_FindNext
        Case #MenuBtn_FindPrevious
        Case #MenuBtn_Replace
        Case #MenuBtn_GoTo
        Case #MenuBtn_SelectAll
        Case #MenuBtn_Font
        Case #MenuBtn_ZoomIn
        Case #MenuBtn_ZoomOut
        Case #MenuBtn_DefaultZoom
        Case #MenuBtn_StatusBar
        Case #MenuBtn_WordWrap
          ToggleWordWrap(EventMenu())
        Case #MenuBtn_About
          About(EventMenu())
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


